{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"strict": true,
		
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,

		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./build",
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"#lib": ["./lib/index.ts"],
            "#menus": ["./menus/index.ts"],
		},
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}